{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "allowJs": true,
    "baseUrl": "src",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "module": "es6",
    "target": "es6",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "esnext", "dom", "dom.iterable", "es5", "es6"],
    "types": ["jquery", "firebase", "node", "cypress", "d3"],
    "skipLibCheck": true,
    "paths": {
      "crypto": ["./node_modules/crypto-browserify"]
    }
  }
}
